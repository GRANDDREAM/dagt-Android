                <!--</RelativeLayout>-->

                <LinearLayout
                    android:id="@+id/fragment5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/m200px_dp"
                    android:layout_below="@+id/fragment4"
                    android:layout_marginBottom="@dimen/m200px_dp"
                    android:layout_marginLeft="@dimen/m30px_dp"
                    android:layout_marginRight="@dimen/m30px_dp"
                    android:layout_marginTop="@dimen/m30px_dp"
                    android:background="@drawable/about_us_bg"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/m30px_dp"
                            android:text="@string/service_fee"
                            android:textColor="@color/black"
                            android:textSize="@dimen/m32px_dp" />

                        <TextView
                            android:id="@+id/fee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/m30px_dp"
                            android:layout_marginRight="@dimen/m30px_dp"
                            android:drawablePadding="@dimen/m20px_dp"
                            android:text="@{bean.credit_apply_server_fee+bean.credit_apply_server_fee_unit}"
                            android:textColor="@color/black"
                            android:textSize="@dimen/m32px_dp" />
                    </RelativeLayout>

                    <View style="@style/w_line_fill_left30dp_30right" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/m30px_dp"
                            android:text="@string/application2_msg"
                            android:textColor="@color/prompt"
                            android:textSize="@dimen/m32px_dp" />


                    </RelativeLayout>


                </LinearLayout>


            </RelativeLayout>
        </ScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/m100px_dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@color/login_bt"
            android:gravity="center"
            android:onClick="@{click.NextClick}"
            android:text="@string/Next"
            android:textColor="@color/white"
            android:textSize="@dimen/m40px_dp" />
    </RelativeLayout>

