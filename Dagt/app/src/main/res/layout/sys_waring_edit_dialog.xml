<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_loginout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/reset_pwd_border"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m80px_dp"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/m28px_dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/m160px_dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ed_no"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/m30px_dp"
            android:background="@drawable/reset_pwd_border"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#3e3e3e"
            android:textSize="@dimen/m28px_dp" />
    </LinearLayout>

    <View style="@style/w_line_fill_left30dp_30right" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="#3e3e3e"
            android:textSize="@dimen/m28px_dp" />

        <View style="@style/h_line_fill" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="@string/save"
            android:textColor="#3e3e3e"
            android:textSize="@dimen/m28px_dp" />
    </LinearLayout>

</LinearLayout>