<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="bean"
            type="com.grandream.dagt.bean.credit.OperatinData.DataBean" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m100px_dp"
        android:layout_marginBottom="@dimen/m20px_dp"
        android:layout_marginTop="@dimen/m20px_dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/m30px_dp"
            android:ellipsize="end"
            android:maxEms="16"
            android:singleLine="true"
            android:text="@{bean.chain_trade_code}" />


        <ImageView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/m30px_dp"
            android:background="@mipmap/icon_delete" />

        <!--<Button-->
        <!--android:id="@+id/bt_delete"-->
