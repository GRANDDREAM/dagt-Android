<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_update"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/reset_pwd_border"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/update_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="软件更新"
            android:textColor="#3e3e3e"
            android:textSize="@dimen/m36px_dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#f0f0f4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginLeft="30dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/update_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/m28px_dp"
            android:textColor="#3e3e3e" />

        <TextView
            android:id="@+id/update_msg1"
            android:layout_width="match_parent"
            android:textSize="@dimen/m28px_dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#3e3e3e" />

        <TextView
            android:id="@+id/update_msg2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/m28px_dp"
            android:textColor="#3e3e3e" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/title_bg"
            android:gravity="center"
            android:text="立即更新"
            android:textColor="#ffffff"
            android:textSize="@dimen/m32px_dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_update_pos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.5dp"
            android:layout_weight="1"
            android:background="@color/title_bg"
            android:gravity="center"
            android:text="取消"
            android:textColor="#ffffff"
            android:textSize="@dimen/m32px_dp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>