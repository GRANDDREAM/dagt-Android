<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="bean"
            type="com.grandream.dagt.bean.wallet.DrawDetailBean.UserDrawCoinAddressBean" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/m30px_dp"
        android:layout_height="@dimen/m160px_dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/m30px_dp"
            android:layout_toRightOf="@+id/coin_cb"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{bean.coin_address_name}"
                android:textColor="@color/black"
                android:textSize="@dimen/m30px_dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{bean.coin_address}"
                android:textSize="@dimen/m26px_dp" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/coin_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/m30px_dp"
            android:layout_marginRight="@dimen/m30px_dp"
            android:button="@drawable/checkbox_style"
            android:enabled="false" />


    </RelativeLayout>
</layout>