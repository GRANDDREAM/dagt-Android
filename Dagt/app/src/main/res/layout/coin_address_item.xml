<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="bean"
            type="com.grandream.dagt.bean.my.TakeCoinAddressData.DataBean" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m30px_dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/m30px_dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m30px_dp"
                android:text="@{bean.coin_address_name}"
                android:textColor="@color/black"
                android:textSize="@dimen/m32px_dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/m30px_dp"
                android:layout_marginTop="@dimen/m30px_dp"
                android:ellipsize="end"
                android:maxEms="16"
                android:singleLine="true"
                android:text="@{bean.coin_address}"
                android:textColor="@color/black"
                android:textSize="@dimen/m30px_dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/edit_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/m30px_dp"
            android:drawableLeft="@mipmap/icon_edit"
            android:drawablePadding="@dimen/m20px_dp"
            android:text="@string/editor"
            android:textColor="@color/login_bt"
            android:textSize="@dimen/m30px_dp" />
    </RelativeLayout>


</layout>